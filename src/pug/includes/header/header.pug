header.header.absolute.width__full
    .container
        .header__block.flex
            a(href="/").flex
                img(src="img/logo.png").logo.header__logo
            ul.header__list.flex
                +headerListItem('/#!','Главная')
                +headerListItem('/product.html','Коллекция пионов')
                +headerListItem('/product.html','Агротехника')
                +headerListItem('/#!','Контакты')
            .header__btns.flex
                a(href="#!").btn.btn__sm.header__btn.flex
                    +btnSmSearch
                a(href="#!").btn.btn__sm.header__btn.flex
                    +btnSmFavorite
                +btnRegister('header__btn')