mixin mainAboutTag(img, img2, imgClass, title, desc)
    .main-about__tag(class=imgClass)
        .main-about__tag-inner.flex
            .main-about__tag-left.width__full
                .main-about__tag-img.relative
                    .main-about__tag-img-item.bg.width__full.absolute(style="background-image: url('" + img + "')")
                    .main-about__tag-img-item.bg.width__full.absolute(style="background-image: url('" + img2 + "')")
            .main-about__tag-right.width__full
                .main-about__tag-title=title
                .main-about__tag-desc=desc
