.overlay.bg(style="background-image: url('img/overlay/bg.png')")
    .container
        .breadcrumb.rank-math-breadcrumb
            a(href="/") Главная
            | &nbsp;|&nbsp;
            span Коллекция пионов
        h1.section__title.section__title_white.relative.overlay__title.archive__title &nbsp;
.archive
    .container
        form().archive__form.archive__filter-row.row
            .col-lg-9
                .filter.width__full
                    .filter__title Поиск
                    .filter__item.filter__search.flex
                        .filter__search-icon.flex
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M11.1111 18.2222C15.0385 18.2222 18.2222 15.0385 18.2222 11.1111C18.2222 7.18375 15.0385 4 11.1111 4C7.18375 4 4 7.18375 4 11.1111C4 15.0385 7.18375 18.2222 11.1111 18.2222Z" stroke="#4E4E4E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M20 20L16.1333 16.1333" stroke="#4E4E4E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        input(type="text" placeholder="Название цветка").width__full.filter__search-input
            .col-lg-3
                .filter
                    .filter__title &nbsp;
                    button(type="submit").btn.filter__submit.width__full.flex
                        <svg class="btn__svg" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.5 5H17.5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
