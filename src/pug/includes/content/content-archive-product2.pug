                        </svg>
                        .btn__title Очистить
        .archive__cart-row.row
            each stock in stocks
                .col-lg-3.card__col
                    +cardItem('/product1.html', stock.cardClass, stock.img, stock.img2, stock.title)
            each stock in stocks
                .col-lg-3.card__col
                    +cardItem('/product1.html', stock.cardClass, stock.img, stock.img2, stock.title)
        .archive__pagination.flex
            a(href="#!").page-numbers.prev.flex
                <svg width="7" height="14" viewBox="0 0 7 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 1L1 7L6 13" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            span.page-numbers.current 1
            a(href="#!").page-numbers.number 2
            a(href="#!").page-numbers.number 3
            a(href="#!").page-numbers.number 4
            span.page-numbers.dots ...
            a(href="#!").page-numbers.next.flex
                <svg width="7" height="14" viewBox="0 0 7 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 13L6 7L1 1" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
